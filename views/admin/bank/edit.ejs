<%- include('../../partials/header.ejs') %> <%-
include('../../partials/navbar.ejs') %> <%-
include('../../partials/sidebar.ejs') %>
<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Bank</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item">
              <a href="/bank">Bank</a>
            </li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
      </div>
    </div>
  </section>
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Edit Bank</h3>
            </div>
            <form action="/bank/edit/<%= bank._id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Nama Pemilik</label>
                  <input
                    type="text"
                    name="name"
                    class="form-control"
                    id="name"
                    value="<%= bank.name %>"
                    placeholder="Masukan Nama Pemilik"
                    required
                  />
                </div>
                <div class="form-group">
                  <label>Nama Bank</label>
                  <select
                    class="form-control select2"
                    style="width: 100%"
                    name="bankName"
                    required
                  >
                    <option selected="selected">Pilih Bank</option>
                    <option value="BCA"
                    <% if (bank.bankName === "BCA") { %>
                      selected
                 <%   } %>
                    >BCA</option>
                    <% if (bank.bankName === "Mandiri") { %>
                      selected
                 <%   } %>
                    >Mandiri</option>
                    <% if (bank.bankName === "Credit card") { %>
                      selected
                 <%   } %>
                    >Credit card</option>
                    <option value="BNI"   <% if (bank.bankName === "BNI") { %>
                      selected
                 <%   } %>>BNI</option>
                    <option value="BRI"
                    <% if (bank.bankName === "BRI") { %>
                      selected
                 <%   } %>>BRI</option>
                  </select>
                </div>
              
                <div class="form-group">
                  <label for="noRekening">Nomor Rekening</label>
                  <input
                    type="text"
                    name="noRekening"
                    class="form-control"
                    id="noRekening"
                    value="<%= bank.noRekening %>"
                    placeholder="Masukan Nomor Rekening"
                    required
                  />
                </div>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include('../../partials/footer.ejs') %> <%- include('../../partials/js.ejs')
%>
