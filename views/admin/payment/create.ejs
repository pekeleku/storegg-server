<%- include('../../partials/header.ejs') %> <%-
include('../../partials/navbar.ejs') %> <%-
include('../../partials/sidebar.ejs') %>
<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Jenis Pembayaran</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item">
              <a href="/payment">Jenis Pembayaran</a>
            </li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
  </section>
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Tambah payment</h3>
            </div>
            <form action="/payment/create" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="type">Tipe </label>
                  <input
                    type="text"
                    name="type"
                    class="form-control"
                    id="type"
                    placeholder="Masukan Tipe Pembayaran "
                    required
                  />
                </div>
                <div class="form-group">
                  <label>Bank</label>
                  <div class="select2-purple">
                    <select
                      class="form-control select2"
                      multiple="multiple"
                      data-placeholder="Pilih Bank"
                      style="width: 100%"
                      name="banks"
                      required
                    >
                      <% banks.forEach(bank => { %>
                      <option value="<%= bank._id %>">
                        <%= bank.name %>-<%= bank.nameBank %>-<%=
                        bank.noRekening %>
                      </option>
                      <% }); %>
                    </select>
                  </div>
                </div>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include('../../partials/footer.ejs') %> <%- include('../../partials/js.ejs')
%>
